<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5">


    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Type :"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/postBackground"
        android:id="@+id/type_title"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/postBackground"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/product_type"
        android:layout_toRightOf="@+id/type_title"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Name :"
        android:gravity="center"
        android:textColor="@color/postBackground"
        android:textSize="25dp"
        android:id="@+id/name_title"
        android:layout_below="@+id/type_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/name_title"
        android:text=""
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textColor="@color/postBackground"
        android:textSize="20dp"
        android:layout_below="@+id/product_type"
        android:textStyle="bold"
        android:id="@+id/product_name"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Colories :"
        android:textColor="@color/postBackground"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_below="@+id/name_title"
        android:id="@+id/colories_title"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/colories_title"
        android:text=""
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textColor="@color/postBackground"
        android:textSize="20dp"
        android:layout_below="@+id/product_name"
        android:textStyle="bold"
        android:id="@+id/product_colories" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/product_colories"
        android:background="@color/postBackground"
        android:layout_marginTop="3dp"/>




</RelativeLayout>