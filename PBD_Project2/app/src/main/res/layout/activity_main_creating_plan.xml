<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_creating_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back5"
    tools:context="com.example.asus.pbd_project2.Visitor.Plans.MainCreatingPlanActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:id="@+id/vegetables_products"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fruits"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_below="@id/vegetables_products"
        android:layout_marginTop="40dp"
        android:id="@+id/fruits_products"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cereals and pulses"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_below="@id/fruits_products"
        android:layout_marginTop="40dp"
        android:id="@+id/cereals_and_pulses_products"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:id="@+id/data"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewShow"
        android:layout_marginLeft="130dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:onClick="Logout"
        android:layout_below="@+id/cereals_and_pulses_products"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
